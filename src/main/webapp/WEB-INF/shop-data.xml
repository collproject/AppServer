<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
">
    
    <context:annotation-config/>
    <context:component-scan base-package="com.pb.shop.app.server"/>
    
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName">
            <value>${jdbc.driverClassName}</value>
        </property>
        <property name="url">
            <value>${jdbc.url}</value>
        </property>
        <property name="username">
            <value>${jdbc.username}</value>
        </property>
        <property name="password">
            <value>${jdbc.password}</value>
        </property>
    </bean>
    
    <!-- Писоединяем dataSource к DAO-классам -->
    
    <bean id="makerImpl" class="com.pb.shop.app.server.MakerDaoServiceImpl">
        <property name ="dataSource" ref="dataSource"/>
    </bean>
    
    <bean id="categoryImpl" class="com.pb.shop.app.server.CategoryDaoServiceImpl">
        <property name ="dataSource" ref="dataSource"/>
    </bean>
    
    <bean id="productImpl" class="com.pb.shop.app.server.ProductDaoServiceImpl">
        <property name ="dataSource" ref="dataSource"/>
    </bean>
    
    <context:property-placeholder location="classpath:/jdbc.properties"/>
</beans>
